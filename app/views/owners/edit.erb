<h1>Update Owner</h1>

<h2>Edits for <%=@owner.name%> </h2>

<form method="POST" action="/owners/<%= @owner.id%>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label>Edit he Onwer's Name:</label>
    <br>
    <input type="text" name="owner[name]" value="<%= @owner.name%>">

    <br>
    <p>Select an existing pet or create a new one below.</p>
    <% @pets.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id %>" value="<%=pet.id%>" <%= 'checked' if @owner.pets.include?(pet) %>><br><%= pet.name%></input><br>
    <%end%>

    <br>
    <h3>New Pet</h3>
    <label>Pet Name: </label>
    <br>
    <input type="text" name="pet[name]" id="pet_name">
    <br>
    <br>

    <input type="submit" value="Update Owner">

</form>